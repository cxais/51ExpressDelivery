page{
    background-color: #EFEFF4;
    word-break: break-all;
}
.showError{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 70rpx;
  background-color: #E64340;
  text-align: center;
  vertical-align: middle;
  color: #fff;
  font-size: 32rpx;
  line-height: 70rpx;
}

.search-items{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  padding-top: 28rpx ;
  padding-bottom: 21rpx ;
}
.search-items .items-title.black{
  color: #353535;
}
.search-items .items-title.yellow{
  color: #B99B43;
}
.search-items .items{
  display: flex;
  width: 690rpx;
  justify-content: center;
  align-items: flex-start;
  padding: 20rpx 0;
}
.search-items .items .img{
  width: 120rpx;
  height: 120rpx;
}
.search-items .items .img image{
  width: 120rpx;
  height: 120rpx;
}
.search-items .items .detail{
  width: 570rpx;
  box-sizing: border-box;
  padding-left: 26rpx;
}
.search-items .items .detail-title{
  display: inline-block;
  width: 570rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
}
.search-items .items .detail-express,
.search-items .items .detail-msg{
  color: #999;
  font-size: 26rpx;
  line-height: 36rpx;
  padding: 7rpx 0;
}
.search-items .items .detail-express text {
  line-height: 36rpx;
}
.search-items .items .detail-msg button{
    width: 186rpx;
    font-size: 26rpx;
    color: #353535;
    margin-top: 20rpx;
    float: left;
    border: 2rpx solid rgba(5, 5, 5.0.1)
}
.search-items .type-text {
   font-size: 32rpx;
   color: #333;
}

.mar{
    width: 100%;
    height: 17rpx;
    background-color: #EFEFF4;
}

.items-list{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    padding-top: 30rpx;
}

.items-list .lists-title{
    width: 690rpx;
    font-size: 28rpx;
    margin-bottom: 18rpx;
}
.items-list .lists-title.bg-yellow{
    color: #EEB200;
}
.items-list .lists-title.bg-green{
    color: #39AF07;
}
.items-list .lists-title.bg-gray{
    color: #9E9BA8;
}
.items-list .lists-title image{
   width: 28rpx;
   height: 28rpx;
   vertical-align: -3rpx;
   margin-right: 10rpx;
}
.items-list .lists{
    width: 638rpx
}
.items-list .lists .list{
    position: relative;
    display: flex;
    justify-content: center;
    align-items: flex-start;
}
.items-list .lists .time{
   width: 70rpx;
   font-size: 24rpx;
   color: #222;
   text-align: left;
}
.items-list .lists .text{
   box-sizing: border-box;
   width: 568rpx;
   height: aut0;
   min-height: 40rpx;
   font-size: 26rpx;
   color: #999;
   border-left: 1px solid #efeff4;
   padding-bottom: 44rpx;
   padding-left: 26rpx; 
   line-height: 36rpx;
}
.items-list .lists .text:before{
    position: absolute;
    top: -1rpx;
    left: 60rpx;
    content: " ";
    width: 25rpx;
    height: 25rpx;
    border-radius: 25rpx;
    background-color: #efeff4;
}
.lists .text.ouer-msg{
    height: auto;
    padding-top: 190rpx; 
    padding-bottom: 0rpx;
    font-size: 26rpx;
    color: #999;
    margin-bottom: 20rpx;
}
.lists .text.ouer-msg:before{
    display: none;
}
.lists .ouer-msg navigator{
    display: inline;
}
.lists .ouer-msg .ouer{
    color: #576b95;
}
.items-list .list .text.bg{
   color: #353535;
   font-size: 28rpx;
}
.items-list .list .text.bg:before{
    background: #bcdfa9;
}

.setTop{
    display: flex;
    justify-content: center;
    width: 750rpx;
    height: 94rpx;
    background: #fff;
}
.setTop .wrap{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 684rpx; 
    color: #222;
    font-size: 32rpx;
}
.setTop .wrap .text{
    width: 500rpx;
}
.setTop .wrap .switch{
    width: 184rpx;
    padding-top: 8rpx;
    text-align: right;
}